@page
@model LoginModel

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        
        <div class="login">
            <div class="login-triangle"></div>
  
                <h2 class="login-header">Iniciar Sesion</h2>

                <form class="login-container" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <p><input type="email" asp-for="Input.Email" placeholder="Email" /></p>
                    <p><input type="password" asp-for="Input.Password" placeholder="Contraseña" /></p>
                    <p><input type="submit" class="azul" value="Acceder"></p>
                </form>

                <div class="col-lg-12">
                    @Html.ActionLink("¿Olvidaste tu contraseña?", "index", "RecuperarCuenta", new {  }, new { @class = "" })
                </div>
                
        </div>
        
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
