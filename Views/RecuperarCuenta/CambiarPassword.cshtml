@model Web.Models.ChangePassword
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid w-75 p-3 page">

    <br />
    <h1>@ViewData["Title"]</h1>
    <hr />

    <form asp-action="CambiarPassword" asp-controller="RecuperarCuenta" method="post">
        
         <div asp-validation-summary="All" class="text-danger"></div>
         <input hidden asp-for="UserId" class="form-control" />

         <div class="inputgroup">
            <input asp-for="NewPassword" class="EmailRecuperar">
            <input class="buttonsubmit inputpasswords" value="Nueva contraseña" type="button">
            <span asp-validation-for="NewPassword" class="text-danger"></span>
         </div>

         <div class="inputgroup mt-2">
            <input asp-for="ConfirmPassword" class="EmailRecuperar">
             <input class="buttonsubmit inputpasswords" value="Repita contraseña" type="button">
              <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
         </div>

        <button type="submit" class="btn btn-primary azul mt-2">Cambiar contraseña</button>
        
    </form>
    
</div>

